{
  "name": "palette",
  "version": "1.0.0",
  "description": "Command line tool to convert colour values.",
  "type": "commonjs",
  "files": [
    "bin"
  ],
  "bin": {
    "palette": "./bin/index.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "test": "echo 'Tests not set up!'",
    "pretty": "prettier --write \"{,!(node_modules|bin|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "lint": "eslint \"{,!(node_modules|bin)/**/}*.{js,ts}\" --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{,src}/**/*.{js,ts}": [
      "npm run pretty",
      "npm run lint"
    ]
  },
  "author": "Bakuzan",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.3.0",
    "figlet": "^1.5.2"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  }
